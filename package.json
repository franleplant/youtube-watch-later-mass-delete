{
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "lint": "run-p lint:*",
    "lint-fix": "run-p 'lint:* -- --fix'",
    "lint:js": "xo",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --write \"**/*.{js,ts,css,html,json,md}\"",
    "format": "yarn prettier --write",
    "release:chrome": "cd distribution && webstore upload --auto-publish",
    "release:firefox": "cd distribution && web-ext-submit",
    "test": "yarn typecheck",
    "watch": "webpack --mode=development --watch"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "globals": [
      "browser"
    ],
    "ignores": [
      "distribution"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-xo"
  },
  "dependencies": {
    "webext-options-sync": "^0.21.2",
    "webextension-polyfill": "^0.4.0",
    "webextension-polyfill-ts": "^0.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "babel-loader": "^8.2.2",
    "chrome-webstore-upload-cli": "^1.2.0",
    "copy-webpack-plugin": "^7.0.0",
    "daily-version": "^0.12.0",
    "dot-json": "^1.1.0",
    "eslint": "^6.1.0",
    "eslint-config-xo": "^0.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "stylelint": "^10.1.0",
    "stylelint-config-xo": "^0.15.0",
    "tsc": "^1.20150623.0",
    "typescript": "^4.1.3",
    "web-ext": "^4.1.0",
    "web-ext-submit": "^4.1.0",
    "webpack": "^5.12.2",
    "webpack-cli": "^4.3.1",
    "xo": "^0.24.0"
  }
}
